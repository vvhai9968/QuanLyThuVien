<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#4F91D7"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Sách"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"
            />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/addAnh"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/kimg"

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/addimg"/>
            <ImageView
                android:id="@+id/imgTS"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sách *"
                android:textSize="19dp"
                android:textColor="@color/black"/>
            <EditText
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:id="@+id/tenS"
                android:layout_marginTop="7dp"
                android:background="@drawable/taovien_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại sách *"
                android:textSize="19dp"
                android:textColor="@color/black"/>
            <Spinner
                android:layout_marginTop="7dp"
                android:background="@drawable/taovien_input"
                android:id="@+id/spinner_idLSach"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả *"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:id="@+id/tacgia"
                android:layout_marginTop="7dp"
                android:background="@drawable/taovien_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Nhà xuất bản *"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:id="@+id/nxb"
                android:layout_marginTop="7dp"
                android:background="@drawable/taovien_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng *"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:id="@+id/soluong"
                android:layout_marginTop="7dp"
                android:background="@drawable/taovien_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/themS"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/button_bg"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:text="Thêm"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_marginLeft="14dp"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/button_bg"
                app:cardCornerRadius="5dp"
                android:id="@+id/thoatts"
                >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:text="Thoát"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

</LinearLayout>