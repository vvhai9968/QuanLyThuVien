<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="14dp"
    android:id="@+id/suaXoapm"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anhSach"
            android:layout_width="123dp"
            android:layout_height="168dp"
            android:src="@drawable/note"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ Tên:"
                    android:textSize="21dp"
                    />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:id="@+id/tennguoimuon"
                    android:textColor="@color/black"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:text="Vu Van Hai"
                    android:textSize="21dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sách:"
                    android:textSize="21dp"
                    />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:id="@+id/sachMuon"
                    android:textColor="@color/black"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:text="Giao duc"
                    android:textSize="21dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày mượn: "
                    android:textSize="21dp"
                    />
                <TextView
                    android:id="@+id/ngayMuon"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/05/2023"
                    android:textSize="21dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày trả: "
                    android:textSize="21dp"
                    />
                <TextView
                    android:id="@+id/ngayTra"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/05/2023"
                    android:textSize="21dp"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>